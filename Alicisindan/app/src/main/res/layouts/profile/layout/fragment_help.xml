        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_main_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Help"
            android:fontFamily="@font/lato"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_16ssp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/helpFragment_layout_searchBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/_10sdp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.101"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpFragment_layout_top"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_100sdp">

            <EditText
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@color/white"
                android:id="@+id/helpFragment_editText_searchBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:inputType="textPersonName"
                android:hint="What are you looking for?"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintCircleRadius="@dimen/_8sdp"
                app:drawableStartCompat="@drawable/ic_search"
                app:drawableTint="@color/primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

