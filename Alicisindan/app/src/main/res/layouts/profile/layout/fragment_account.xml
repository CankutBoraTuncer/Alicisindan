<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".activities.ui.main.profile.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/accountFragment_layout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_main_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_16ssp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/accountFragment_layout_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountFragment_layout_top">

        <androidx.cardview.widget.CardView
            android:id="@+id/accountFragment_cardView_userInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:text="User Info"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_16ssp"
                app:drawableStartCompat="@drawable/ic_person"
                app:drawableTint="@color/primary" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/accountFragment_cardView_addressInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountFragment_cardView_userInfo"
            app:layout_constraintWidth_percent="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Adress Info"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_16ssp"
                app:drawableStartCompat="@drawable/ic_location"
                app:drawableTint="@color/primary" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/accountFragment_cardView_changeMailOrPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountFragment_cardView_addressInfo"
            app:layout_constraintWidth_percent="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Change Email Or Phone Number"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_16ssp"
                app:drawableStartCompat="@drawable/ic_message"
                app:drawableTint="@color/primary" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/accountFragment_cardView_changePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountFragment_cardView_changeMailOrPhone"
            app:layout_constraintWidth_percent="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Change Password"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_16ssp"
                app:drawableStartCompat="@drawable/ic_lock"
                app:drawableTint="@color/primary" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/accountFragment_cardView_others"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountFragment_cardView_changePassword"
            app:layout_constraintWidth_percent="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Others"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_16ssp"
                app:drawableStartCompat="@drawable/ic_settings"
                app:drawableTint="@color/primary" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>