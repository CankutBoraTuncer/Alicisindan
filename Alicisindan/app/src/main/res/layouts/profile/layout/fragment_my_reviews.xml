<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fitsSystemWindows="true"
    tools:context=".activities.ui.main.profile.MyReviewsFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myReviewsFragment_layout_top"
        android:layout_width="0dp"
        android:layout_height="@dimen/_84sdp"
        android:background="@drawable/background_main_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="My Reviews"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myReviewsFragment_layout_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingTop="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myReviewsFragment_layout_top">

        <androidx.cardview.widget.CardView
            android:id="@+id/myReviewsFragment_cardView_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_4sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Rating"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_16ssp"
                    app:drawableStartCompat="@drawable/ic_star_full"
                    app:drawableTint="@color/primary" />

                <TextView
                    android:id="@+id/ratingAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Rating"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_13ssp"

                    app:drawableTint="@color/primary" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/numOfReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/lato"
                    android:text="Number"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_13ssp"

                    app:drawableTint="@color/primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myReviewsFragment_recycleview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myReviewsFragment_cardView_rating" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>