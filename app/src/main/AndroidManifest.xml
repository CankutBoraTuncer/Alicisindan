            android:name=".activities.ui.main.SellFragment"
            android:exported="false" />
        <activity
            android:name=".activities.ui.main.BuyFragment"
            android:exported="false" />
        <activity
            android:name=".activities.ui.login.PhoneVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ui.login.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ui.login.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ui.login.PhoneActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>